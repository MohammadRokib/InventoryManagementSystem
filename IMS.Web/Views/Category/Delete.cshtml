@model Category

<form method="post">
	<input asp-for="CategoryID" hidden /> @*If not given object will go without an id and give an error*@
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="CategoryName" class="p-0"></label>
			<input asp-for="CategoryName" disabled class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Description" class="p-0">Description</label>
			<input asp-for="Description" disabled class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
					Back to List
				</a>
			</div>
		</div>

	</div>
</form>